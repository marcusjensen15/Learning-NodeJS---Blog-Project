<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header'); -%>


<body>

  <!-- Navigation -->
  <%- include('layouts/navbar') -%>


  <!-- Page Header -->
  <header class="masthead" style="background-image: url('<%= blogpost.image %>')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">

            <h1><%= blogpost.title %></h1>
            
            <span class="meta">Posted by
              <a href="#"><%= blogpost.userid.username %></a>
              on <%= blogpost.datePosted.toDateString() %> </span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Post Content -->
    <article>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <%- blogpost.body %>
          </div>
        </div>
      </article>

      <hr>
      <% if(loggedIn) { %>

        <form action="/post/<%=blogpost._id %>/edit" method="GET" enctype="multipart/form-data">
          <div class="form-group">
            <button type="submit" class="btn btn-primary" id="sendMessageButton">Edit Post</button>
          </div>
        </form>


        <form action="/post/<%=blogpost._id %>" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <button type="submit" class="btn btn-primary" id="sendMessageButton">Delete</button>
          </div>
        </form>
        <% } %>

        <!-- Footer -->
        <%- include('layouts/footer'); -%>
        <%- include('layouts/scripts'); -%>

      </body>

      </html>
